{
  "openapi": "3.0.3",
  "info": {
    "title": "Window Drag/Resize Contracts",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "Position": {
        "type": "object",
        "properties": {
          "x": { "type": "number" },
          "y": { "type": "number" }
        },
        "required": ["x", "y"],
        "additionalProperties": false
      },
      "Size": {
        "type": "object",
        "properties": {
          "width": { "type": "number" },
          "height": { "type": "number" }
        },
        "required": ["width", "height"],
        "additionalProperties": false
      },
      "InteractionMode": {
        "type": "string",
        "enum": ["static", "follow"]
      },
      "WindowMoveEvent": {
        "type": "object",
        "properties": {
          "position": { "$ref": "#/components/schemas/Position" },
          "source": { "type": "string", "enum": ["user"] }
        },
        "required": ["position", "source"],
        "additionalProperties": false
      },
      "WindowResizeEvent": {
        "type": "object",
        "properties": {
          "size": { "$ref": "#/components/schemas/Size" },
          "position": { "$ref": "#/components/schemas/Position" },
          "direction": {
            "type": "string",
            "enum": ["n", "s", "e", "w", "ne", "nw", "se", "sw"]
          },
          "source": { "type": "string", "enum": ["user"] }
        },
        "required": ["size", "direction", "source"],
        "additionalProperties": false
      }
    }
  }
}
