{
  "openapi": "3.0.3",
  "info": {
    "title": "Window Behavior Contracts",
    "version": "1.0.0"
  },
  "paths": {},
  "components": {
    "schemas": {
      "Position": {
        "type": "object",
        "required": ["x", "y"],
        "properties": {
          "x": { "type": "number" },
          "y": { "type": "number" }
        }
      },
      "Size": {
        "type": "object",
        "required": ["width", "height"],
        "properties": {
          "width": { "type": "number" },
          "height": { "type": "number" }
        }
      },
      "WindowEvents": {
        "type": "object",
        "properties": {
          "onMoveStart": { "type": "string", "description": "Triggered on drag start" },
          "onMoving": { "$ref": "#/components/schemas/Position" },
          "onMoveEnd": { "$ref": "#/components/schemas/Position" },
          "onResizeStart": { "type": "string", "description": "Triggered on resize start" },
          "onResizing": {
            "type": "object",
            "properties": {
              "position": { "$ref": "#/components/schemas/Position" },
              "size": { "$ref": "#/components/schemas/Size" }
            }
          },
          "onResizeEnd": {
            "type": "object",
            "properties": {
              "position": { "$ref": "#/components/schemas/Position" },
              "size": { "$ref": "#/components/schemas/Size" }
            }
          },
          "onActive": { "type": "string", "description": "Triggered when window becomes active" }
        }
      },
      "ThemeBehavior": {
        "type": "object",
        "properties": {
          "windowDragMode": {
            "type": "string",
            "enum": ["static", "follow"],
            "description": "Drag interaction mode"
          },
          "windowDefaults": {
            "type": "object",
            "additionalProperties": true,
            "description": "Default Window props provided by theme"
          }
        }
      }
    }
  }
}
